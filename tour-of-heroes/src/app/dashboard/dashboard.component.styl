vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  {prop} args

box-sizing()
  vendor('box-sizing', border-box)

col(p1, p2)
  width unit(p1 / p2 * 100, '%')

.grid-pad
  padding 10px 0
  > [class*='col-']
    &:last-of-type
      padding-right 20px

[class*='col-']
  float left
  padding-right 20px
  padding-bottom 20px
  &:last-of-type
    padding-right 0

a
  text-decoration none

*, *::after, *::before
  box-sizing()

h3
  text-align center
  margin-bottom 0

h4
  position relative

.grid
  margin 0

.col-1-4
  col(1, 4)

.module
  padding 20px
  text-align center
  color #eee
  max-height 120px
  min-width 120px
  background-color #607d8b
  border-radius 2px
  &:hover
    color @background-color
    background-color #eee
    cursor pointer

@media screen and (min-width: 600px)
  .module
    font-size 10px
    max-height 75px

@media screen and (min-width: 1024px)
  .grid
    margin 0
  .module
    min-width 60px

